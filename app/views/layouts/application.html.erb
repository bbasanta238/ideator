<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag "master", "data-turbo-track": "reload" %>
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@300;400;600;700&family=Open+Sans:wght@300;400;600;700&family=Pacifico&display=swap" rel="stylesheet">
  </head>
  <body>
    <div id='wrap'>
      <%= render 'shared/nav'%>
      <div class="container">
        <div class = "container">
          <div class = "row">
            <div class = "col-xs-12 col-md-12 col-md-offset-3">
              <%= render 'shared/flash_messages'%>
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render 'shared/footer'%>
  </body>
</html>
